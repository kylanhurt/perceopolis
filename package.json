{
  "name": "percepolis",
  "version": "1.0.0",
  "description": "flux architecture w/ webpack, ES6, and react-router",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server"
  },
  "author": "Kylan Hurt",
  "broserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "start": "npm run build && serve .",
    "build": "npm run build-js && npm run build-css",
    "watch": "npm run watch-js & npm run watch-css & serve .",
    "test": "npm run lint -s && npm run build",
    "build-css": "rework-npm index.css | cleancss -o build/build.css",
    "build-js": "browserify --extension=.jsx --extension=.js src/app.jsx | uglifyjs > build/build.js",
    "watch-js": "watchify --extension=.jsx --extension=.js src/app.jsx -o build/build.js --debug --verbose",
    "watch-css": "nodemon -e css --ignore build/build.css --exec 'rework-npm index.css -o build/build.css'",
    "lint-eslint": "eslint .",
    "lint-jscs": "jscs .",
    "lint": "npm run lint-eslint && npm run lint-jscs"
  },
  "dependencies": {
    "axios": "^0.8.0",
    "flux": "^2.1.1",
    "history": "^2.1.1",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-jwt-auth": "^0.6.0",    
    "react-router": "^2.4.1",
    "bootstrap": "^3.3.0",
    "jwt-decode": "^1.1.0",
    "react-mixin": "^1.1.0",
    "reqwest": "^1.1.5",
    "when": "^3.7.2"    
  },
  "devDependencies": {
    "babel-core": "^6.1.2",
    "babel-loader": "^6.0.1",
    "babel-preset-es2015": "^6.1.2",
    "babel-preset-react": "^6.1.2",
    "bootstrap": "^3.3.7",
    "grunt": "^1.0.1",
    "grunt-contrib-cssmin": "latest",
    "grunt-contrib-jshint": "latest",
    "grunt-contrib-less": "latest",
    "grunt-contrib-uglify": "latest",
    "grunt-contrib-watch": "latest",
    "jquery": "^3.1.1",
    "jshint-stylish": "latest",
    "react-dom": "^15.3.2",
    "react-jwt-auth": "^0.6.0",
    "webpack": "^1.12.3",
    "webpack-dev-server": "^1.14.1",
    "babelify": "^6.1.0",
    "browser-sync": "^2.1.6",
    "browserify": "^8.0.3",
    "clean-css": "^3.1.9",
    "eslint": "^0.14.1",
    "nodemon": "^1.5.0",
    "rework": "^1.0.1",
    "rework-npm": "^1.0.0",
    "rework-npm-cli": "^0.1.1",
    "serve": "^1.4.0",
    "uglify-js": "^2.4.15",
    "watchify": "^2.1.1"    
  }
}
